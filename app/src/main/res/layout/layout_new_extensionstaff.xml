<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_1" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/top_black_bg"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:padding="12dp"
                android:src="@drawable/btn_back" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="@string/new_ef_1"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/city_line" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="10"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="20dp" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:gravity="left|center_vertical"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/ed_name"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:background="@color/white"
                            android:ems="10"
                            android:gravity="center_vertical"
                            android:hint="@string/new_ef_2"
                            android:maxLength="15"
                            android:paddingRight="5dip"
                            android:singleLine="true"
                            android:textColor="@color/black_little"
                            android:textColorHint="@color/gray"
                            android:textSize="15sp"
                            android:typeface="normal" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/gray_little5" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:gravity="left|center_vertical"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/ed_phone"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:background="@color/white"
                            android:ems="10"
                            android:gravity="center_vertical"
                            android:hint="@string/new_ef_3"
                            android:maxLength="25"
                            android:paddingRight="5dip"
                            android:singleLine="true"
                            android:textColor="@color/black_little"
                            android:textColorHint="@color/gray"
                            android:textSize="15sp"
                            android:typeface="normal" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/gray_little5" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:gravity="left|center_vertical"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/ed_passward"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:background="@color/white"
                            android:ems="10"
                            android:gravity="center_vertical"
                            android:hint="@string/new_ef_12"
                            android:maxLength="25"
                            android:paddingRight="5dip"
                            android:singleLine="true"
                            android:textColor="@color/black_little"
                            android:textColorHint="@color/gray"
                            android:textSize="15sp"
                            android:typeface="normal" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/gray_little5"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center|left"
                            android:text="@string/new_ef_9"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="3"
                            android:gravity="center_vertical|right"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/btn_type1"
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/btn_login"
                                android:gravity="center"
                                android:text="@string/new_ef_5"
                                android:textColor="@color/white"
                                android:textSize="11sp" />

                            <Button
                                android:id="@+id/btn_type2"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/btn_login"
                                android:gravity="center"
                                android:text="@string/new_ef_6"
                                android:textColor="@color/white"
                                android:textSize="11sp" />

                            <Button
                                android:id="@+id/btn_type3"
                                android:layout_width="70dp"
                                android:layout_height="30dp"
                                android:background="@drawable/btn_login"
                                android:gravity="center"
                                android:text="@string/new_ef_7"
                                android:textColor="@color/white"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/gray_little5" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center|left"
                            android:text="@string/new_ef_10"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="3"
                            android:gravity="center_vertical|right"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/btn_bd"
                                android:layout_width="70dp"
                                android:layout_height="30dp"
                                android:background="@drawable/btn_login"
                                android:gravity="center"
                                android:text="@string/new_ef_11"
                                android:textColor="@color/white"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/gray_little5"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center|left"
                            android:text="@string/new_ef_13"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="3"
                            android:gravity="center_vertical|right"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/btn_boss"
                                android:layout_width="70dp"
                                android:layout_height="30dp"
                                android:background="@drawable/btn_login"
                                android:gravity="center"
                                android:text="@string/new_ef_11"
                                android:textColor="@color/white"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/gray_little5" />

                    <RelativeLayout
                        android:id="@+id/btn_region"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/main_btn_bg1"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_alignParentLeft="true"
                            android:gravity="center|left"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:text="@string/new_ef_4"
                                android:textColor="@color/black_little"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/t_region"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:text="@string/addcar_10"
                                android:textColor="@color/gray"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/icon_63" />
                        </LinearLayout>
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/gray_little5" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center|left"
                            android:text="@string/new_ef_14"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="3"
                            android:gravity="center_vertical|right"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/btn_status"
                                android:layout_width="70dp"
                                android:layout_height="30dp"
                                android:background="@drawable/btn_login"
                                android:gravity="center"
                                android:text="@string/new_ef_15"
                                android:textColor="@color/white"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/btn_up"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="50dip"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="30dip"
                    android:background="@drawable/btn_login"
                    android:scaleType="fitCenter" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/new_ef_8"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>